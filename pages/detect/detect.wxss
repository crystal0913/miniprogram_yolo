.container {
  padding: 20rpx;
  padding-top: 80rpx;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.image-wrapper {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.image-container {
  width: 100%;
  height: 600rpx;
  background-color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

.detection-boxes {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.detection-box {
  position: absolute;
  border: 2px solid #00ff00;
  box-sizing: border-box;
}

.box-label {
  position: absolute;
  top: -24px;
  left: -2px;
  background-color: #00ff00;
  color: #fff;
  padding: 2px 6px;
  font-size: 12px;
  border-radius: 4px;
  white-space: nowrap;
}

.button-container {
  margin: 20rpx 0 40rpx 0;
  padding: 0 40rpx;
}

.result-container {
  width: 80%;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  padding: 0 10rpx;
}

.result-item {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  overflow: hidden;
}

.result-item-header {
  background-color: #e6e6e6;
  padding: 5rpx 25rpx;
  font-size: 28rpx;
  color: #666;
}

.result-item-content {
  padding: 5rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.result-item-content text {
  font-size: 28rpx;
  color: #333;
} 